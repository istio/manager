{
  "virtual_hosts": [
   {
    "name": "gc-hello.default.svc.cluster.local|http",
    "domains": [
     "gc-hello:80",
     "gc-hello",
     "gc-hello.default:80",
     "gc-hello.default",
     "gc-hello.default.svc:80",
     "gc-hello.default.svc",
     "gc-hello.default.svc.cluster:80",
     "gc-hello.default.svc.cluster",
     "gc-hello.default.svc.cluster.local:80",
     "gc-hello.default.svc.cluster.local",
     "gc-hello.mybluemix.net:80",
     "gc-hello.mybluemix.net"
    ],
    "routes": [
     {
      "prefix": "/",
      "host_rewrite": "gc-hello.mybluemix.net",
      "cluster": "out.gc-hello.default.svc.cluster.local|http"
     }
    ]
   },
   {
    "name": "hello.default.svc.cluster.local|http",
    "domains": [
     "hello:80",
     "hello",
     "hello.default:80",
     "hello.default",
     "hello.default.svc:80",
     "hello.default.svc",
     "hello.default.svc.cluster:80",
     "hello.default.svc.cluster",
     "hello.default.svc.cluster.local:80",
     "hello.default.svc.cluster.local",
     "10.1.0.0:80",
     "10.1.0.0"
    ],
    "routes": [
     {
      "prefix": "/",
      "cluster": "out.hello.default.svc.cluster.local|http"
     }
    ]
   },
   {
    "name": "world.default.svc.cluster.local|http",
    "domains": [
     "world:80",
     "world",
     "world.default:80",
     "world.default",
     "world.default.svc:80",
     "world.default.svc",
     "world.default.svc.cluster:80",
     "world.default.svc.cluster",
     "world.default.svc.cluster.local:80",
     "world.default.svc.cluster.local",
     "10.2.0.0:80",
     "10.2.0.0"
    ],
    "routes": [
     {
      "prefix": "/",
      "cluster": "out.world.default.svc.cluster.local|http",
      "timeout_ms": 30000,
      "retry_policy": {
       "retry_on": "5xx,connect-failure,refused-stream",
       "num_retries": 1
      }
     }
    ]
   }
  ]
 }
{
  "listeners": [
    {
      "address": "tcp://0.0.0.0:8443",
      "filters": [
        {
          "type": "read",
          "name": "http_connection_manager",
          "config": {
            "codec_type": "auto",
            "stat_prefix": "https",
            "route_config": {
              "virtual_hosts": [
                {
                  "name": "foo.default.svc.cluster.local",
                  "domains": [
                    "foo.default.svc.cluster.local"
                  ],
                  "routes": [
                    {
                      "prefix": "/bar",
                      "host_rewrite": "foo.default.svc.cluster.local:80",
                      "cluster": "out.foo.default.svc.cluster.local|http"
                    }
                  ]
                },
                {
                  "name": "world.default.svc.cluster.local",
                  "domains": [
                    "world.default.svc.cluster.local"
                  ],
                  "routes": [
                    {
                      "prefix": "/hello",
                      "host_rewrite": "world.default.svc.cluster.local:80",
                      "cluster": "out.world.default.svc.cluster.local|http"
                    }
                  ]
                }
              ]
            },
            "filters": [
              {
                "type": "decoder",
                "name": "router",
                "config": {}
              }
            ],
            "access_log": [
              {
                "path": "/dev/stdout"
              }
            ]
          }
        }
      ],
      "ssl_context": {
        "cert_chain_file": "testdata/tls.crt",
        "private_key_file": "testdata/tls.key"
      },
      "bind_to_port": true
    }
  ],
  "admin": {
    "access_log_path": "/dev/stdout",
    "address": "tcp://0.0.0.0:15000"
  },
  "cluster_manager": {
    "clusters": [
      {
        "name": "out.foo.default.svc.cluster.local|http",
        "service_name": "foo.default.svc.cluster.local|http",
        "connect_timeout_ms": 1000,
        "type": "sds",
        "lb_type": "round_robin"
      },
      {
        "name": "out.world.default.svc.cluster.local|http",
        "service_name": "world.default.svc.cluster.local|http",
        "connect_timeout_ms": 1000,
        "type": "sds",
        "lb_type": "round_robin"
      }
    ],
    "sds": {
      "cluster": {
        "name": "sds",
        "connect_timeout_ms": 1000,
        "type": "strict_dns",
        "lb_type": "round_robin",
        "hosts": [
          {
            "url": "tcp://localhost:8080"
          }
        ]
      },
      "refresh_delay_ms": 1000
    }
  }
}
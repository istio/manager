          {
            "url": "tcp://istio-pilot.istio-system-noauth:15003"
          }
        ]
      },
      {
        "name": "lds",
        "connect_timeout_ms": 1000,
        "type": "strict_dns",
        "lb_type": "round_robin",
        "hosts": [
          {
            "url": "tcp://istio-pilot.istio-system-noauth:15003"
          }
        ]
      },
      {
        "name": "mixer_server",
        "connect_timeout_ms": 1000,
        "type": "strict_dns",
        "lb_type": "round_robin",
        "hosts": [
          {
            "url": "tcp://istio-mixer.istio-system-noauth:15004"
          }
        ],
        "features": "http2",
          "circuit_breakers": {
            "default": {

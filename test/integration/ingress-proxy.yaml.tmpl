apiVersion: v1
kind: Service
metadata:
  name: ingress
  labels:
    app: ingress
spec:
  ports:
  - name: https
    port: 443
  - name: http
    port: 80
  selector:
    app: ingress
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: ingress
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: ingress
    spec:
      containers:
      - name: proxy
        image: {{.hub}}/runtime:{{.tag}}
        args: ["proxy", "ingress", "-s", "manager:8080", "-v", "2", "-n", "{{.namespace}}", "--secret", "ingress"]
        imagePullPolicy: Always
        ports:
        - containerPort: 443
        - containerPort: 80

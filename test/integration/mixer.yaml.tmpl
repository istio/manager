---
# Mixer
apiVersion: v1
kind: Service
metadata:
  name: mixer
  labels:
    infra: mixer
spec:
  ports:
  - port: 9091
    name: http
  selector:
    infra: mixer
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: mixer
spec:
  replicas: 1
  template:
    metadata:
      labels:
        infra: mixer
    spec:
      containers:
      - name: mixer
        image: {{.hub}}/mixer:4c36e8d362352249645703e1f2e03d22e77d240f43c358b3625c5caea303f89a
        imagePullPolicy: Always
        ports:
        - containerPort: 9091
        args:
          - --logtostderr
          - -v
          - "2"
      - name: debug
        image: docker.io/istio/debug:test
        securityContext:
            privileged: true
---

apiVersion: v1
kind: ConfigMap
metadata:
  name: istio
data:
  mesh: |-
    defaultConfig:
      discoveryAddress: istio-pilot.{{.IstioNamespace}}:8080
{{if .Zipkin}}
      zipkinAddress: zipkin.{{.IstioNamespace}}:9411
{{end}}
    egressProxyAddress: istio-egress.{{.Namespace}}:80
{{if .Mixer}}
    mixerAddress: istio-mixer.{{.IstioNamespace}}:9091
{{end}}
    authPolicy: {{ .Auth }}
